<Window x:Class="Supermarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket"
        mc:Ignorable="d"
        Title="Супермаркет" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnProducts" Content="Продукты" Click="btnProducts_Click"/>
            <Button x:Name="btnClients" Content="Клиенты" Click="btnClients_Click"/>
            <Button x:Name="btnDepartments" Content="Отделы" Click="btnDepartments_Click"/>
            <Button x:Name="btnSales" Content="Продажи" Click="btnSales_Click"/>
            <Button x:Name="btnSuppliers" Content="Поставщики" Click="btnSuppliers_Click"/>
        </StackPanel>

        <Frame x:Name="frmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
